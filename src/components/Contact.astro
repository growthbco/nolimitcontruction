---
// Contact section component
---

<section id="contact" class="py-20 bg-gray-900">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold mb-4">Ready to Start Your Project?</h2>
      <p class="text-gray-400 text-lg">Get in touch for a free consultation and quote</p>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16">
      <div class="space-y-8">
        <div class="flex items-center space-x-4">
          <i class="fa-solid fa-phone text-lime text-2xl"></i>
          <div>
            <h3 class="font-semibold mb-1">Phone</h3>
            <p class="text-gray-400">(267) 813-1136</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <i class="fa-solid fa-envelope text-lime text-2xl"></i>
          <div>
            <h3 class="font-semibold mb-1">Email</h3>
            <p class="text-gray-400">nolimitconstruction83@gmail.com</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <i class="fa-solid fa-map-marker-alt text-lime text-2xl"></i>
          <div>
            <h3 class="font-semibold mb-1">Service Area</h3>
            <p class="text-gray-400">Pennsylvania & New Jersey<br>Licensed & Insured</p>
          </div>
        </div>
      </div>
      <div class="bg-black p-8 rounded-2xl">
        <form class="space-y-6">
          <div>
            <input type="text" placeholder="Your Name" class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-lime focus:outline-none">
          </div>
          <div>
            <input type="email" placeholder="Email Address" class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-lime focus:outline-none">
          </div>
          <div>
            <input type="tel" placeholder="Phone Number" class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-lime focus:outline-none">
          </div>
          <div>
            <textarea rows="4" placeholder="Project Details" class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-lime focus:outline-none"></textarea>
          </div>
          <button type="submit" class="w-full bg-lime text-black py-3 rounded-lg font-semibold hover:bg-lime-light transition-colors">
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
