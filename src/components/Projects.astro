---
// Projects section component
---

<section id="projects" class="py-20 bg-black">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold mb-4">Recent Projects</h2>
      <p class="text-gray-400 text-lg">Showcasing our commitment to excellence</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="group cursor-pointer">
        <div class="relative overflow-hidden rounded-2xl">
          <div class="w-full h-80 bg-gradient-to-br from-lime to-lime-dark group-hover:scale-105 transition-transform duration-300 flex items-center justify-center">
            <div class="text-center text-black">
              <i class="fas fa-swimming-pool text-5xl mb-4"></i>
              <h3 class="text-2xl font-bold">Concrete Patio & Pool</h3>
              <p class="text-lg">Custom Installation</p>
            </div>
          </div>
          <div class="absolute bottom-6 left-6">
            <h3 class="text-2xl font-bold mb-2 text-white">Concrete Patio & Pool Project</h3>
            <p class="text-gray-300">Custom concrete work with pool installation</p>
          </div>
        </div>
      </div>
      <div class="group cursor-pointer">
        <div class="relative overflow-hidden rounded-2xl">
          <div class="w-full h-80 bg-gradient-to-br from-gray-800 to-gray-900 group-hover:scale-105 transition-transform duration-300 flex items-center justify-center">
            <div class="text-center text-white">
              <i class="fas fa-building text-5xl mb-4 text-lime"></i>
              <h3 class="text-2xl font-bold">Commercial Concrete</h3>
              <p class="text-lg text-gray-300">Professional Installation</p>
            </div>
          </div>
          <div class="absolute bottom-6 left-6">
            <h3 class="text-2xl font-bold mb-2 text-white">Commercial Concrete Project</h3>
            <p class="text-gray-300">Professional concrete installation and finishing</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
