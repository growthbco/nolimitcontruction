// Projects section component
---

<section id="projects" class="py-20 bg-black">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold mb-4">Recent Projects</h2>
      <p class="text-gray-400 text-lg">Showcasing our commitment to excellence</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="group cursor-pointer">
        <div class="relative overflow-hidden rounded-2xl">
          <img class="w-full h-80 object-cover group-hover:scale-105 transition-transform duration-300" src="/IMG_2704.PNG" alt="NoLimit Construction concrete and pool project" />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
          <div class="absolute bottom-6 left-6">
            <h3 class="text-2xl font-bold mb-2">Concrete Patio & Pool Project</h3>
            <p class="text-gray-300">Custom concrete work with pool installation</p>
          </div>
        </div>
      </div>
      <div class="group cursor-pointer">
        <div class="relative overflow-hidden rounded-2xl">
          <img class="w-full h-80 object-cover group-hover:scale-105 transition-transform duration-300" src="/photo_2024-01-30_00-34-40.jpg" alt="NoLimit Construction concrete and pool project" />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
          <div class="absolute bottom-6 left-6">
            <h3 class="text-2xl font-bold mb-2">Commercial Concrete Project</h3>
            <p class="text-gray-300">Professional concrete installation and finishing</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
